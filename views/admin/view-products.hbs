<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-4">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td> {{this.Name}} </td>
                    <td> {{this.Category}} </td>
                    <td> {{this.Description}} </td>
                    <td> <img src="/product-images/{{this._id}}.jpg" alt="{{this.Name}}"
                            style="width: 50px; height:50px"> </td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete {{this.name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>