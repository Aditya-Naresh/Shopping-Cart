<section>
    <div class="conatainer">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            {{#each products}}
            <tr>
                
                <td><img src="/product-images/{{this.product._id}}.jpg" alt="" style="height: 70px; width: 70px;"></td>
                <td> {{this.product.Name}} </td>
          
                <td><button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button> {{this.quantity}} <button class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button></td>
                <td><a href="" class="btn btn-danger">Remove</a></td>
            </tr>
            {{/each}}
        </table>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count) {
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart: cartId,
                product: proId,
                count: count 
            },
            method:'post',
            success:function (response){
                alert(response)
            }
        })
    }
</script>