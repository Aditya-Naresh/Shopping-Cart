<section>
    <div class="container mt-5">
        
        <div class="row">

            {{#each products}}
            
            <div class="col md-3 p-3">
                    <div class="card" style="width: 15rem ; height: 23rem; overflow-wrap: break-word;">
                        <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="{{this.product.Name}}" style="height: 10rem;">
                        <div class="card-body">
                            <h5 class="card-title"> {{this.product.Name}} </h5>
                            <p class="card-text"> Rs.{{this.product.Price}} </p>
                            <p class="card-text"> {{this.Description}} </p>
                            <p class="card-text"> {{this.quantity}} </p>
                          
                        </div>
                    </div>
                </div>

            {{/each}}

        </div>

    </div>
</section>


